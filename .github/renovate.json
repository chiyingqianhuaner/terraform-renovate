{
  "extends": ["config:base"],
  "schedule": ["before 4am on monday"],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "groupName": "all dependencies",
      "automerge": true
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["hashicorp/terraform"],
      "separateMajorMinor": true,
      "separateMultipleMajor": true,
      "groupName": "terraform-major-and-minor"
    }
  ]
}
