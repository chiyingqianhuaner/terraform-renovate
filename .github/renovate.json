{
  "extends": ["config:recommended", ":dependencyDashboard"],
  "schedule": ["before 0am on weekdays"],
  "includePaths": [
    "helm/gke/ds-boston-dev/**",
    "helm/gke/ds-boston-prod/**",
    "atlantis.yaml"
  ],
  "packageRules": [
    {
      "matchPaths": ["helm/gke/my-dev/**"],
      "matchPackageNames": ["hashicorp/*"],
      "separateMajorMinor": true,
      "separateMultipleMajor": true,
      "prTitle": "Update {{{depName}}} from {{{currentValue}}} to {{{newValue}}} in ds-boston-dev",
      "groupName": "terraform-major-and-minor-ds-boston-dev"
    },
    {
      "matchPaths": ["helm/gke/my-prod/**"],
      "matchPackageNames": ["hashicorp/*"],
      "separateMajorMinor": true,
      "separateMultipleMajor": true,
      "prTitle": "Update {{{depName}}} from {{{currentValue}}} to {{{newValue}}} in ds-boston-prod",
      "groupName": "terraform-major-and-minor-ds-boston-prod"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^atlantis\\.yaml$"],
      "matchStrings": [
        "terraform_version:\\s*v?(?<currentValue>[\\d\\.]+)"
      ],
      "extractVersionTemplate": "v(?<version>.*)$",
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
