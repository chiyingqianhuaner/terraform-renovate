{
  "extends": ["config:base", ":dependencyDashboard"],
  "schedule": ["before 1am"],
  "includePaths": [
    "helm/gke/business-dev/**",
    "helm/gke/business-prod/**",
    "atlantis.yaml"
  ],
  "packageRules": [
    {
      "matchPaths": ["helm/gke/business-dev/**"],
      "separateMajorMinor": true,
      "separateMultipleMajor": true,
      "prTitle": "Update {{{depName}}} from {{{currentValue}}} to {{{newValue}}} in business-dev",
      "groupName": "terraform-major-and-minor-business-dev"
    },
    {
      "matchPaths": ["helm/gke/business-prod/**"],
      "separateMajorMinor": true,
      "separateMultipleMajor": true,
      "prTitle": "Update {{{depName}}} from {{{currentValue}}} to {{{newValue}}} in business-prod",
      "groupName": "terraform-major-and-minor-business-prod"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^atlantis\\.yaml$"],
      "matchStrings": [
        "terraform_version:\\s*v?(?<currentValue>[\\d\\.]+)"
      ],
      "extractVersionTemplate": "v(?<version>.*)$",
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
