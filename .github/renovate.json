{
  "extends": ["config:recommended", ":dependencyDashboard"],
  "schedule": ["before 4am on monday"],
  "includePaths": [
    "helm/gke/ds-boston-dev/**",
    "helm/gke/ds-boston-prod/**",
    "atlantis.yaml"
  ],
  "packageRules": [
    {
      "matchPaths": ["helm/gke/ds-boston-dev/**"],
      "matchPackageNames": ["hashicorp/terraform"],
      "separateMajorMinor": true,
      "prTitle": "Update version in ds-boston-dev",
      "groupName": "terraform-major-and-minor-ds-boston-dev"
    },
    {
      "matchPaths": ["helm/gke/ds-boston-prod/**"],
      "matchPackageNames": ["hashicorp/terraform"],
      "separateMajorMinor": true,
      "prTitle": "Update version in ds-boston-dev",
      "groupName": "terraform-major-and-minor-ds-boston-prod"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^atlantis\\.yaml$"],
      "matchStrings": [
        "terraform_version:\\s*v?(?<currentValue>[\\d\\.]+)"
      ],
      "extractVersionTemplate": "v(?<version>.*)$",
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
